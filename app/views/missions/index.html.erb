<!-- mission/index -->
<table class="table table-boldered">
  <thead>
    <tr>
      <td>Title</td>
      <td>Creator </td>
    </tr>
  </thead>
  <% @missions.each do |mission| %>
  <tr>
    <td>
      <%= link_to(mission.title, mission_path(mission)) %>
    </td>
    <td> <%= mission.user.email %> </td>
    <td>
     <%= link_to("Edit", edit_mission_path(mission)) %>
     <%= link_to("Destroy", mission_path(mission), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
    </td>
    <td>
      <%= mission.created_at %>
    </td>
  </tr>
  <% end %>
</table>
