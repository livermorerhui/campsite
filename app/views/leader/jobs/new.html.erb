
<!-- Leader 新增职位需求 -->

<h1 class="text-center"> Add a job </h1>

<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for [:leader,@mission,@job] do |f| %>

    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :people %>
    <%= f.input :wage_lower_bound %>
    <%= f.input :wage_upper_bound %>

    <%= f.submit "Submit" %>
  <% end %>
</div>
