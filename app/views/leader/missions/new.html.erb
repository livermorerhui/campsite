
<!-- Leader 修改任务内容 -->

<h1 class="text-center"> Add a Mission </h1>

<div class="col-md-4 col-md-offset-4">

  <%= simple_form_for [:leader,@mission] do |f| %>

    <%= f.input :title, :label => "行动代号" %>
    <%= f.input :description, :label => "行动描述" %>
    <%= f.input :contact_email, :label => "Email 我" %>
    <%= f.input :location, :label => "地点" %>
    <%= f.input :is_hidden, :label => "隐藏" %>
    <%= f.submit "Submit" , class: "btn btn-primary" %>
    <%= link_to("Back", leader_missions_path, class: "btn btn-default")%>
  <% end %>
</div>
