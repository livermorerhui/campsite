<div class="mission">
  <% if current_user && current_user == @mission.user %>
    <%= link_to("Write a job", new_leader_mission_job_path(@mission), class: "btn btn-default pull-right")%>
    <%= link_to("Edit", edit_leader_mission_path(@mission), class: "btn btn-primary pull-right")%>
    <%= link_to("Back", leader_missions_path(@mission), class: "btn btn-default pull-right")%>
  <% end %>
</div>

<h1> <%= @mission.title %> </h1>

<p>
  <%= simple_format(@mission.description) %>
  <%= simple_format(@mission.location) %>
</p>

<table class="table table-boldered text-center">
  <thead>
      <tr>
        <th class="text-center">job title</th>
        <th class="text-center">内容</th>
        <th class="text-center">招聘人数</th>
        <th class="text-center">薪资下限</th>
        <th class="text-center">薪资上限</th>
        <th class="text-center">job id</th>
        <th class="text-center">mission id</th>
        <th class="text-center">user id</th>
        <th class="text-center">创建者</th>
        <th class="text-center"></th>
        <th class="text-center">发布时间</th>
      </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
        <tr>
          <td>
            <%= render_job_status(job) %>
            <%= link_to(job.title, leader_mission_job_path(job.mission, job)) %>
          </td>
          <td><%= job.description %></td>
          <td><%= job.people %></td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.wage_upper_bound %></td>
          <td><%= job.id %></td>
          <td><%= job.mission_id %></td>
          <td><%= job.user_id %></td>
          <td><%= job.user.email %></td>
          <td>
            <% if current_user && current_user == @mission.user %>
              <%= link_to("Edit", edit_leader_mission_job_path(job.mission, job)) %> |
              <%= link_to("Destroy", leader_mission_job_path(job.mission, job), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
            <% end %>
          </td>
          <td>
            <%= job.created_at %>
         </td>
       </tr>
    <% end %>
  </tbody>
</table>
