<body style="margin-top: 60px">
<div class="pull-right">
  <%= link_to("Add a mission", new_leader_mission_path, :class => "btn btn-default" ) %>
</div>

<h1 class="text-center">  I am Leader </h1>

<table class="table table-boldered table-striped custab">
  <thead>
      <tr>
        <th class="text-center">任务标题</th>
        <th class="text-center">内容</th>
        <th class="text-center">地点</th>
        <th class="text-center">mission id</th>
        <th class="text-center">job count</th>
        <th></th>
        <th class="text-center">发布时间</th>
      </tr>
  </thead>
  <tbody>
    <% @missions.each do |mission| %>
    <tr>
      <td>
        <%= render_mission_status(mission) %>

        <%= link_to(mission.title, leader_mission_path(mission)) %>
      </td>
      <td><%= mission.description %></td>
      <td><%= mission.location %></td>
      <td><%= mission.id %></td>
      <td><%= mission.jobs.count %></td>
      <td>
        <% if current_user && current_user == mission.user %>
          <%= link_to("Edit", edit_leader_mission_path(mission)) %> |
          <%= link_to("Destroy", leader_mission_path(mission), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
        <% end %>
        <% if mission.is_hidden %>
          <%= link_to("Publish", publish_leader_mission_path(mission), :method => :post, :class => "btn btn-xs btn-default") %>
        <% else %>
          <%= link_to("Hide", hide_leader_mission_path(mission), :method => :post, :class => "btn btn-xs btn-default") %>
        <% end %>
      </td>
      <td>
        <%= mission.created_at %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</body>
