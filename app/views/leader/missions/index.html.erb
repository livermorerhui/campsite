<body>
<div class="list-group pull-right">
  <%= link_to(content_tag(:span, "Add a mission", :class => "fa fa-book"),  new_leader_mission_path, :class => "btn btn-success") %>
</div>

<h1 class="text-center">  I am Leader </h1>

<table class="table table-boldered table-striped custab">
  <thead>
      <tr>
        <th class="text-center">任务标题</th>
        <th class="text-center">内容</th>
        <th class="text-center">地点</th>
      <!--  <th class="text-center">mission id</th>  -->
        <th class="text-center">job count</th>
        <th></th>
        <th class="text-center">发布时间</th>
      </tr>
  </thead>
  <tbody class="text-center">
    <% @missions.each do |mission| %>
    <tr>
      <td>
        <%= render_mission_status(mission) %>

        <%= link_to(mission.title, leader_mission_path(mission)) %>
      </td>
      <td><%= mission.description %></td>
      <td><%= mission.location %></td>
    <!--  <td><%= mission.id %></td> -->
      <td><%= mission.jobs.count %></td>
      <td>
        <% if current_user && current_user == mission.user %>
          <%= link_to(content_tag(:span, "修改", :class => "fa fa-pencil-square-o"), edit_leader_mission_path(mission), :class => "btn btn-xs btn-info") %>
          <%= link_to(content_tag(:span, "删除", :class => "fa fa-eraser"), leader_mission_path(mission), :method => :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "Are you sure?" }) %>
        <% end %>
        <% if mission.is_hidden %>
          <%= link_to(content_tag(:span, "公布", :class => "fa fa-eye"), publish_leader_mission_path(mission), :method => :post, :class => "btn btn-xs btn-success") %>
        <% else %>
          <%= link_to(content_tag(:span, "隐藏", :class => "fa fa-low-vision"), hide_leader_mission_path(mission), :method => :post,  :class => "btn btn-xs btn-warning") %>
        <% end %>
      </td>
      <td>
        <%= mission.created_at.strftime("%Y/%m/%d") %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</body>
